{% extends "layouts/base.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-inner">
        <h1 class="hero-title">{{ title }}</h1>
        <div class="hero-meta">
          <div class="author-info">
            <img src="{{ authorAvatar }}" alt="" class="author-avatar">
            <span class="author-name">{{ author }}{% if authorRole %}, <span class="author-role">{{ authorRole }}</span>{% endif %}</span>
          </div>
          <div class="meta-date">
            <span class="date-value">Last updated {{ date | readableDate }}</span>
            <span class="reading-time"> &bull; {{ content | readingTime }}</span>
          </div>
        </div>
        <a href="#" class="share-btn" aria-label="Share">
          <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
            <path d="M13.5 6.75a2.25 2.25 0 1 0 0-4.5 2.25 2.25 0 0 0 0 4.5ZM4.5 11.25a2.25 2.25 0 1 0 0-4.5 2.25 2.25 0 0 0 0 4.5ZM13.5 15.75a2.25 2.25 0 1 0 0-4.5 2.25 2.25 0 0 0 0 4.5Z" stroke="#000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="m6.44 10.13 5.13 2.99M11.56 4.88 6.44 7.87" stroke="#000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </section>

    <!-- Content Area -->
    <div class="content-area">

      <!-- Sidebar -->
      <aside class="sidebar sidebar--plain">
        <p class="sidebar-title">On this page</p>
        {{ content | toc | safe }}
      </aside>

      <!-- Main Column -->
      <div class="article-wrapper">

        <!-- Article Body -->
        <article class="article-body">
          <div class="body-text">
            {{ content | safe }}
          </div>
        </article>
      </div>

      <!-- Right Info Sidebar -->
      <aside class="info-sidebar">
        <div class="info-card">
          <h3 class="info-card-title">Create AI videos in minutes</h3>
          <div class="info-card-expand">
            <p class="info-card-desc">Turn text into professional video with AI avatars. No cameras, no studios.</p>
            <ul class="info-card-features">
              <li>
                <span class="info-card-icon">&#10003;</span>
                <span>100+ realistic AI avatars</span>
              </li>
              <li>
                <span class="info-card-icon">&#10003;</span>
                <span>70+ languages supported</span>
              </li>
              <li>
                <span class="info-card-icon">&#10003;</span>
                <span>Script-to-video in minutes</span>
              </li>
              <li>
                <span class="info-card-icon">&#10003;</span>
                <span>Enterprise-grade security</span>
              </li>
            </ul>
            <p class="info-card-note">No credit card required</p>
          </div>
          <a href="#" class="btn info-card-btn">Generate a video for free</a>
        </div>
      </aside>
    </div>

    <!-- Explore Articles Section -->
    <section class="explore-section">
      <div class="explore-header">
        <h2 class="explore-title">Explore articles by<br>the Colossyan team</h2>
        <a href="/blog/" class="view-all-link">
          <span>View all</span>
          <img src="/assets/icon-chevron-right.svg" alt="" width="24" height="24">
        </a>
      </div>
      <div class="explore-cards">
        {% set relatedPosts = collections.posts | reverse %}
        {% set count = 0 %}
        {% for post in relatedPosts %}
          {% if post.url != page.url and count < 3 %}
            {% set count = count + 1 %}
        <a href="{{ post.url }}" class="card">
          <div class="card-image">
            {% if post.data.featuredImage %}
            <img src="{{ post.data.featuredImage }}" alt="{{ post.data.title }}">
            {% else %}
            <img src="/assets/card-1.jpg" alt="{{ post.data.title }}">
            {% endif %}
          </div>
          <div class="card-text">
            <h3 class="card-title">{{ post.data.title }}</h3>
            <p class="card-desc">{{ post.data.description | default("") }}</p>
          </div>
        </a>
          {% endif %}
        {% endfor %}
      </div>
    </section>
{% endblock %}
